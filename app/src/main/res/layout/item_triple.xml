<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/triple_list_picture1"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:background="@drawable/chun" />

        <ImageView
            android:id="@+id/triple_list_picture2"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/triple_list_picture1"
            android:background="@drawable/chun" />

        <ImageView
            android:id="@+id/triple_list_picture3"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/triple_list_picture2"
            android:background="@drawable/chun" />

        <TextView
            android:id="@+id/triple_list_tile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/triple_list_picture3"
            android:text="chun triple"
            android:textSize="24sp" />
    </RelativeLayout>
</RelativeLayout>